<!DOCTYPE html>
<html>
<head>
  <title>Anti Corruption Application</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-header" style="margin-left: 4em;">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <%= link_to "Anti Corruption App", root_path, :class => 'navbar-brand' %>
      </div>
      <div class="navbar-collapse collapse navbar-inverse-collapse" style="margin-right: 2em;">
          
          <ul class="nav navbar-nav navbar-left">
              <li><%= link_to "HotZones", hotzones_path %></li>
          </ul>
          
        <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li><%= link_to('Dashboard', dashboard_path) %></li>
                <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                <li><%= link_to('Edit registration', edit_user_registration_path) %></li>

            <% elsif admin_signed_in? %>
                <li><%= link_to('Logout', destroy_admin_session_path, :method => :delete) %></li>
                <li><%= link_to('Edit registration', edit_admin_registration_path) %></li>

            <% else %>
                <li><%= link_to 'Log In', new_user_session_path %></li>
                <li><%= link_to 'Join Us', new_user_registration_path %></li>
            <% end %>
                        
        </ul>
      </div>
    </div>
    
    <div align="center" style="margin-top: 1em;">
        <% if notice %>
            <p class="alert alert-dismissable alert-success"><%= notice %></p>
        <% end %>

        <% if alert %>
            <p class="alert alert-dismissable alert-danger"><i><%= alert %></i></p>
        <% end %>
    </div>
    
    <div class="container">
        <%= yield %>
    </div>

</body>
</html>
